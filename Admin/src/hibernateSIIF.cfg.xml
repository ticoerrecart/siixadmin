<!DOCTYPE hibernate-configuration
  PUBLIC "-//Hibernate/Hibernate Configuration DTD//EN"
  "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory>
		<!-- SQL dialect -->
		<property name="dialect">org.hibernate.dialect.MySQL5Dialect</property>

		<!-- Enable Hibernate's automatic session context management -->
		<property name="current_session_context_class">thread</property>
		<!-- Disable the second-level cache -->
		<property name="cache.provider_class">org.hibernate.cache.NoCacheProvider</property>
		<!-- Echo all executed SQL to stdout -->
		<property name="hibernate.show_sql">false</property>
		<property name="hibernate.format_sql">true</property>

		<!-- Drop and re-create the database schema on startup -->
		<property name="hbm2ddl.auto">validate</property>

		<!-- Enable Hibernate's automatic session context management -->
		<mapping class='ar.com.siif.negocio.Rol' />
		<mapping class='ar.com.siif.negocio.ItemMenu' />
		<mapping class='ar.com.siif.negocio.Fiscalizacion' />
		<mapping class='ar.com.siif.negocio.Usuario' />
		<mapping class='ar.com.siif.negocio.BoletaDeposito' />
		<mapping class='ar.com.siif.negocio.ValeTransporte' />
		<mapping class='ar.com.siif.negocio.SubImporte' />		
		<mapping class='ar.com.siif.negocio.GuiaForestal' />
		<mapping class='ar.com.siif.negocio.Entidad' />
		<mapping class='ar.com.siif.negocio.Obrajero' />
		<mapping class='ar.com.siif.negocio.PPF' />
		<mapping class='ar.com.siif.negocio.SinFinesDeLucro' />
		<mapping class='ar.com.siif.negocio.Estancia' />
		<mapping class='ar.com.siif.negocio.Aforo' />
		<mapping class='ar.com.siif.negocio.Muestra' />
		<mapping class='ar.com.siif.negocio.TipoProducto' />
		<mapping class='ar.com.siif.negocio.TipoProductoForestal' />
		<mapping class='ar.com.siif.negocio.TipoProductoExportacion' />
		<mapping class='ar.com.siif.negocio.AreaDeCosecha' />
		<mapping class='ar.com.siif.negocio.PMF' />
		<mapping class='ar.com.siif.negocio.Tranzon' />
		<mapping class='ar.com.siif.negocio.Marcacion' />
		<mapping class='ar.com.siif.negocio.Rodal' />
		<mapping class='ar.com.siif.negocio.Localidad' />
		<mapping class='ar.com.siif.negocio.Periodo' />
		<mapping class='ar.com.siif.negocio.Reporte' />
		<mapping class='ar.com.siif.negocio.ProvinciaDestino' />
		<mapping class='ar.com.siif.negocio.LocalidadDestino' />
		<mapping class='ar.com.siif.negocio.CertificadoOrigen' />
		<mapping class='ar.com.siif.negocio.TipoProductoEnCertificado' />
		<mapping class='ar.com.siif.negocio.OperacionFiscalizacion' />
		<mapping class='ar.com.siif.negocio.OperacionGuiaForestal' />

	</session-factory>
</hibernate-configuration>
